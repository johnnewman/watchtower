server {
    listen 443 ssl;
    server_name _;

    ssl_certificate        /etc/nginx/certs/wt.crt;
    ssl_certificate_key    /etc/nginx/certs/wt.key;
    ssl_client_certificate /etc/nginx/certs/ca.crt;
    ssl_verify_client      on;

    # allow <reverse proxy ip>;
    # deny all;

    location ~^/(status|start|stop|stream|record|config) {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/watchtower.sock;
        uwsgi_buffering off;
    }

    location / {
        deny all;
    }
}
